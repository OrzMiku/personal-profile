---
import { getEntry } from "astro:content";
import { type Project } from "../types";
import Card from "./ui/Card.astro";
import Button from "./ui/Button.astro";
const projects = await getEntry("data", "projects");
---

<section class="mt-8">
  <h2 class="text-2xl font-bold text-slate-900 mb-4">项目</h2>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
    {projects && projects.data && 
      projects.data.map((project: Project) => (
        <Card>
          <div class="flex flex-col justify-between h-full">
            <div>
              <h3 class="text-xl font-bold text-slate-900">{project.name}</h3>
              <p class="text-slate-500 mt-2">{project.description}</p>
            </div>
            <div class="mt-4">
              <Button href={project.url} external={true}>
                查看项目
              </Button>
            </div>
          </div>
        </Card>
      ))
    }
  </div>
</section>
